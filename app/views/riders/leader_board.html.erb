<table>
  <tr>
    <th>Name</th>
    <th>Race Number</th>
    <th>Rider Time</th>
  </tr>

<% @riders.each do |r| %>
  <tr id="<%= r.id %>">
    <td><%= r.name %></td>
    <td><%= r.race_number %></td>
    <td id="l_ridertime">
      <% if r.start_time.nil? || r.finish_time.nil? %>
        <%= "Not Started Yet" %>
      <% else %>
        <%= ChronicDuration.output(r.rider_time) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>


